{% extends 'layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}

            <h1>{{ title }}</h1>

           {#En version simplifiée qui génère le formulaire entièrement : {{ form(membreForm) }} #}

           {# En générant le formulaire nous-même :  #}

           {{ form_start(membreForm) }}

                {# Si on veut afficher toutes les erreurs :  {{ form_errors(membreForm) }} #}

                <div class="form-group">
                    <label for="">
                        {{ form_label(membreForm.pseudo) }}
