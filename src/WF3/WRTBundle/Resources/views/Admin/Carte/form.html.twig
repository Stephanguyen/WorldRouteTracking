                        {{ form_widget(membreForm.adresse, {'attr' : {'class' : 'form-control', 'placeholder' : 'Votre Adresse'}}) }}
                        {{ form_errors(membreForm.adresse) }}

                </div>

                <div class="form-group">
                    {{ form_widget(membreForm.save, {'attr' : {'class' : 'btn btn-success', 'value' : 'Inscription' } }) }}

                </div>


                {{ form_rest(membreForm) }}
                {# Il faudra toujours faire le form_rest() car il génère des jetons CSRF et GERE LA SECURITE !!!  #}

           {{ form_end(membreForm) }}

{% endblock %}